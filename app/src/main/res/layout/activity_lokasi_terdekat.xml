<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LokasiTerdekat" />
    <Button
        android:background="@color/tingkat4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="60dp"
        android:text="Wisata Terdekat"
        android:textColor="#FFFFFF"
        android:onClick="cariLokasiTerdekat">
    </Button>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp">
        <ImageButton
            android:layout_margin="3dp"
            android:id="@+id/lokasiSaya"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_my_location_24px"
            android:layout_centerHorizontal="true"
            android:onClick="myLocation" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>